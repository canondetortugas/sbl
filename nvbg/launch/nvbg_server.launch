
<launch>
  <arg name="pkg" value="nvbg" />
  <arg name="name" value="nvbg_server" />
  <arg name="type" default="$(arg name)" />
  <arg name="rate" default="60" />
  <arg name="args" value="_loop_rate:=$(arg rate)" />

  <node
      pkg="$(arg pkg)"
      type="$(arg type)"
      name="$(arg name)"
      args="$(arg args)"
      output="screen"
      launch-prefix="xterm -e gdb --args"
      />
  
</launch>
